{
	"name": "@pawells/mcp-memory",
	"version": "1.0.4",
	"description": "Model Context Protocol server for semantic memory and knowledge management with Claude Code",
	"type": "module",
	"main": "./build/index.js",
	"bin": {
		"mcp-memory": "./build/index.js"
	},
	"scripts": {
		"build": "tsc",
		"start": "node build/index.js",
		"dev": "tsc && node build/index.js",
		"watch": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"lint": "eslint src/",
		"lint:fix": "eslint src/ --fix",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"prepublishOnly": "npm run build",
		"prepare": "husky"
	},
	"dependencies": {
		"@huggingface/transformers": "^3.8.1",
		"@modelcontextprotocol/sdk": "^0.5.0",
		"@qdrant/js-client-rest": "^1.9.0",
		"chokidar": "^3.5.3",
		"dotenv": "^16.3.1",
		"gray-matter": "^4.0.3",
		"ignore": "^5.3.0",
		"openai": "^4.20.0",
		"uuid": "^10.0.0",
		"zod": "^3.25.76",
		"zod-to-json-schema": "^3.25.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.0.0",
		"@stylistic/eslint-plugin": "^2.0.0",
		"@types/node": "^20.10.0",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"@vitest/coverage-v8": "^1.0.0",
		"@vitest/ui": "^1.0.0",
		"eslint": "^9.0.0",
		"eslint-import-resolver-typescript": "^3.6.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-unused-imports": "^4.0.0",
		"globals": "^15.0.0",
		"husky": "^9.1.7",
		"typescript": "^5.3.3",
		"vitest": "^1.0.0"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"semantic-memory",
		"vector-search",
		"claude",
		"claude-code",
		"knowledge-management",
		"qdrant",
		"openai",
		"embeddings",
		"ai-memory",
		"ai"
	],
	"author": "Phillip Aaron Wells",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PhillipAWells/mcp-memory.git"
	},
	"bugs": {
		"url": "https://github.com/PhillipAWells/mcp-memory/issues"
	},
	"homepage": "https://github.com/PhillipAWells/mcp-memory#readme",
	"engines": {
		"node": ">=24.0.0"
	},
	"files": [
		"build/",
		"rules/",
		"README.md",
		"LICENSE",
		".env.example"
	],
	"publishConfig": {
		"access": "public"
	}
}